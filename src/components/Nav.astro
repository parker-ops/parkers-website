---
const links = [
  { label: 'About', href: '#about' },
  { label: 'Experience', href: '#experience' },
  { label: 'Gallery', href: '#gallery' },
  { label: 'Game', href: '#game' },
  { label: 'Contact', href: '#contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-nav">
  <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="#" class="font-heading text-xl font-semibold text-warm-white tracking-wide hover:text-amber transition-colors">
      PN
    </a>

    <!-- Desktop nav -->
    <ul class="hidden md:flex items-center gap-8">
      {links.map((link) => (
        <li>
          <a
            href={link.href}
            class="text-sm font-medium text-warm-gray hover:text-amber transition-colors duration-200 tracking-wide uppercase"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile hamburger -->
    <button
      id="mobile-toggle"
      class="md:hidden flex flex-col gap-1.5 p-2"
      aria-label="Toggle navigation"
    >
      <span class="block w-6 h-0.5 bg-warm-white transition-all duration-300" id="bar1"></span>
      <span class="block w-6 h-0.5 bg-warm-white transition-all duration-300" id="bar2"></span>
      <span class="block w-4 h-0.5 bg-warm-white transition-all duration-300 ml-auto" id="bar3"></span>
    </button>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-midnight-light/95 backdrop-blur-md border-t border-midnight-lighter">
    <ul class="flex flex-col items-center py-6 gap-6">
      {links.map((link) => (
        <li>
          <a
            href={link.href}
            class="text-base font-medium text-warm-gray hover:text-amber transition-colors duration-200 tracking-wide uppercase mobile-link"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  const nav = document.getElementById('main-nav');
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');

  // Scroll background
  window.addEventListener('scroll', () => {
    if (window.scrollY > 60) {
      nav?.classList.add('bg-midnight/90', 'backdrop-blur-md', 'shadow-lg');
    } else {
      nav?.classList.remove('bg-midnight/90', 'backdrop-blur-md', 'shadow-lg');
    }
  });

  // Mobile toggle
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  document.querySelectorAll('.mobile-link').forEach((link) => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });
</script>
